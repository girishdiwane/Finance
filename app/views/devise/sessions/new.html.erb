 <%= stylesheet_link_tag    "login", :media => "all" %>
 

<script>
		jQuery(document).ready(function(){
			// binds form submission and fields to the validation engine
			jQuery("#new_user").validationEngine();
		});
            
</script>
<div class="container">
<div class="row">
<div class="span6">
      <div class="border-form-div">


    <h2>Sign in</h2><hr>
      <%= form_for(resource, :as => resource_name, :class =>"form-3",:url => session_path(resource_name)) do |f| %>
     <div><%= f.label :email %><br />
    <%= f.email_field :email,:class => "validate[required, custom[email]]", :autofocus => true %></div>
    <div><%= f.label :password %><br />
    <%= f.password_field :password ,:type => "password",:class => "validate[required]"%></div>
     <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
     <%= f.submit "Sign in", :class=>'btn btn-primary'%>
     <% end %>
     <% end %>
 

  <%= render "devise/shared/links" %>
     </div>

</div>


</div>
</div>